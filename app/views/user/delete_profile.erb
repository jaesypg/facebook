<div>
  <h3>Delete Profile page</h3>
  <form action="/users/<%=@user.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
    Name: <input type="text" name="user[name]" size="30" value="<%=@user.name%>"></input><br>
    Email: <input type="text" name="user[email]" size="30" value="<%=@user.email%>"></input><br>
    Password: <input type="password" name="user[password]" size="30" value="<%=@user.password%>"></input><br>
    <a href="/users"> Back </a>
    <input type="submit" value="Delete Profile"></input>
  </form>
</div>